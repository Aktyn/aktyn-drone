{
  "name": "aktyn-drone",
  "version": "2.1.0",
  "private": true,
  "description": "Raspberry Pi to flight controller interface with p2p-based connectivity, web controls, and real-time camera stream preview",
  "author": "Rados≈Çaw Krajewski (Aktyn)",
  "license": "GPL-3.0-only",
  "keywords": [
    "p2p",
    "raspberry pi",
    "drone",
    "web control",
    "real-time camera stream"
  ],
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "start": "npm run start --workspaces --if-present",
    "start:drone-computer": "npm run start --workspace=@aktyn-drone/drone-computer",
    "dev": "npm run dev --workspaces --if-present",
    "dev:drone-computer": "npm run dev --workspace=@aktyn-drone/drone-computer",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "npm run format --workspaces --if-present"
  }
}