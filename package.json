{
  "name": "aktyn-drone",
  "version": "2.1.0",
  "private": true,
  "description": "Raspberry Pi to flight controller interface with p2p-based connectivity, web controls, and real-time camera stream preview",
  "author": "Rados≈Çaw Krajewski (Aktyn)",
  "license": "GPL-3.0-only",
  "keywords": [
    "p2p",
    "raspberry pi",
    "drone",
    "web control",
    "real-time camera stream"
  ],
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:mock": "env MOCK_GPS=true MOCK_FLIGHT_CONTROLLER=true MOCK_RPICAM_VID=true turbo run dev",
    "start": "turbo run start",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:watch": "turbo run test:watch",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx}\""
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.10",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6"
  },
  "packageManager": "npm@10.9.3"
}