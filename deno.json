{
  "version": "2.0.0",
  "description": "Raspberry Pi to flight controller interface with p2p-based connectivity, web controls, and real-time camera stream preview",
  "author": "Rados≈Çaw Krajewski (Aktyn)",
  "license": "GPL-3.0-only",
  "keywords": [
    "p2p",
    "raspberry pi",
    "drone",
    "web control",
    "real-time camera stream"
  ],
  "workspace": [
    "drone-computer",
    "mobile-pilot",
    "common"
  ],
  "tasks": {
    "check": "deno check **/*.ts",
    "test": "deno test",
    "fmt": "deno fmt",
    "start:drone": "deno task --cwd=./drone-computer start",
    "start:pilot": "deno task --cwd=./mobile-pilot serve",
    "dev:drone": "deno task --cwd=./drone-computer dev",
    "dev:pilot": "deno task --cwd=./mobile-pilot dev"
  },
  "fmt": {
    "include": [
      "**/*.ts"
    ],
    "lineWidth": 100,
    "singleQuote": true,
    "semiColons": false
  },
  "compilerOptions": {
    "strict": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "nodeModulesDir": "auto"
}