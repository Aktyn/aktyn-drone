{
  "name": "@aktyn-drone/root",
  "version": "2.0.0",
  "description": "Raspberry Pi to flight controller interface with p2p-based connectivity, web controls, and real-time camera stream preview",
  "author": "Rados≈Çaw Krajewski (Aktyn)",
  "license": "GPL-3.0-only",
  "keywords": [
    "p2p",
    "raspberry pi",
    "drone",
    "web control",
    "real-time camera stream"
  ],
  "workspace": [
    "drone-computer",
    "mobile-pilot",
    "common"
  ],
  "tasks": {
    "check": "deno check **/*.ts",
    "test": "deno test",
    "fmt": "deno fmt",
    "start:drone": "deno task -p workspaces/drone-computer start",
    "start:pilot": "deno task -p workspaces/mobile-pilot start"
  },
  "fmt": {
    "include": [
      "**/*.ts"
    ],
    "lineWidth": 100,
    "singleQuote": true
  }
}