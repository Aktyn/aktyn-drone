{
  "name": "@aktyn-drone/drone-computer",
  "version": "2.0.0",
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-env src/main.ts",
    "dev": "deno run --watch --allow-net --allow-read --allow-env src/main.ts",
    "check": "deno check **/*.ts",
    "test": "deno test"
  },
  "fmt": {
    "include": [
      "**/*.ts"
    ],
    "lineWidth": 100,
    "singleQuote": true
  },
  "imports": {
    "@aktyn-drone/common": "../common/main.ts"
  }
}