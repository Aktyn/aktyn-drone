{
  "name": "@aktyn-drone/drone-computer",
  "version": "2.0.0",
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-ffi --allow-env --env-file=.env src/main.ts",
    "dev": "deno run --watch --allow-net --allow-read --allow-ffi --allow-env --env-file=.env src/main.ts",
    "check": "deno check **/*.ts",
    "test": "deno test"
  },
  "imports": {
    "@aktyn-drone/common": "../common/main.ts",
    "peerjs-on-node": "npm:peerjs-on-node@^1.0.2"
  },
  "fmt": {
    "include": [
      "**/*.ts"
    ],
    "lineWidth": 100,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "include": [
        "no-console"
      ]
    }
  }
}